<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:tools="http://schemas.android.com/tools"
                 xmlns:app="http://schemas.android.com/apk/res-auto"
                 android:layout_width="match_parent"
                 android:background="@color/background"
                 android:layout_height="match_parent"
                 tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30dp"
                android:text=""
                android:id="@+id/textview_level"
                android:layout_gravity="center_horizontal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="horizontal">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        style="@style/PrimeButton"
                        tools:text="2"
                        android:id="@+id/prime1"
                        android:onClick="onPrimeClick"/>
                    <Button
                        style="@style/PrimeButton"
                        tools:text="3"
                        android:id="@+id/prime2"
                        android:onClick="onPrimeClick"/>
                    <Button
                        style="@style/PrimeButton"
                        tools:text="5"
                        android:id="@+id/prime3"
                        android:onClick="onPrimeClick"/>
                    <Button
                        style="@style/PrimeButton"
                        tools:text="7"
                        android:id="@+id/prime4"
                        android:onClick="onPrimeClick"/>
                    <Button
                        style="@style/PrimeButton"
                        tools:text="11"
                        android:id="@+id/prime5"
                        android:onClick="onPrimeClick"/>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        tools:text="50000"
                        android:id="@+id/to_factor"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="70dp" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/error_view"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:tint="#ff0000"
                        android:visibility="invisible"
                        android:src="@drawable/rage_error"/>

                </FrameLayout>
            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:background="@drawable/start_button"
                    android:id="@+id/button_start"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Start Level 1"
                    android:textSize="24dp"
                    android:textColor="@color/startButtonTextColor"
                    android:onClick="onStartClick"/>

                <ProgressBar
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/progress_bar"
                    android:max="100"
                    android:progress="100"
                    android:layout_gravity="center"
                    android:progressDrawable="@drawable/progress_bar"
                    android:visibility="invisible"/>
            </FrameLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="160dp"
            android:id="@+id/ballon1" android:src="@drawable/balloon"
            android:layout_gravity="bottom"
            android:visibility="invisible"
            android:tint="#00ff00"
            android:alpha="0.5" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:id="@+id/ballon2"
            android:src="@drawable/balloon"
            android:visibility="invisible"
            android:layout_gravity="center_horizontal|bottom"
            android:tint="#ff0000"
            android:alpha="0.5"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="160dp"
            android:id="@+id/ballon3"
            android:visibility="invisible"
            android:src="@drawable/balloon"
            android:layout_gravity="center_horizontal|bottom|right"
            android:tint="#0000ff"
            android:alpha="0.5"/>

        <LinearLayout
            android:id="@+id/help_bubble"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@color/helpBubbleColor"
            android:padding="8dp"
            android:visibility="gone"
            tools:visibility="visible">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:text="How to Play"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"
                android:text="Each prime you click on the left will divide the center number by that number."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"
                android:text="If the center number is not divisible by that prime, you will get a time penalty!"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Got it"
                android:onClick="onHideHelp"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/grumpy"
            android:visibility="invisible">

            <ImageView
                android:layout_width="373dp"
                android:layout_height="373dp"
                android:id="@+id/imageView"
                android:src="@drawable/grumpycat"
                android:layout_gravity="center"
                android:text="NO"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YOU HAVE LOST."
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30dp"
                android:paddingBottom="40dp"
                android:layout_gravity="center_horizontal|bottom" />

        </FrameLayout>

    </FrameLayout>

</LinearLayout>



