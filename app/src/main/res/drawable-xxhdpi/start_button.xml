<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true">
        <layer-list>
            <item android:right="@dimen/button_shadow" android:bottom="@dimen/button_shadow">
                <shape android:shape="rectangle">
                    <corners android:radius="5dip" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <item android:top="@dimen/button_shadow" android:left="@dimen/button_shadow">
                <shape android:shape="rectangle"  >
                    <corners android:radius="5dip" />
                    <stroke android:width="1dip" android:color="@color/startButtonStroke" />
                    <solid android:color="@color/startButton1" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_focused="true">
        <layer-list>
            <item android:right="@dimen/button_shadow" android:bottom="@dimen/button_shadow">
                <shape android:shape="rectangle">
                    <corners android:radius="5dip" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <item android:top="@dimen/button_shadow" android:left="@dimen/button_shadow">
                <shape android:shape="rectangle"  >
                    <corners android:radius="5dip" />
                    <stroke android:width="1dip" android:color="@color/startButtonStroke" />
                    <solid android:color="@color/startButton1" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:left="@dimen/button_shadow" android:top="@dimen/button_shadow">
                <shape android:shape="rectangle">
                    <corners android:radius="5dip" />
                    <solid android:color="#ccc" />
                </shape>
            </item>
            <item android:bottom="@dimen/button_shadow" android:right="@dimen/button_shadow">
                <shape android:shape="rectangle"  >
                    <corners android:radius="5dip" />
                    <stroke android:width="1dip" android:color="@color/startButtonStroke" />
                    <solid android:color="@color/startButton1" />

                </shape>
            </item>
        </layer-list>
    </item>

</selector>